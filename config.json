{
  "project"  : "Craft Master",
  "settings" : {
    "*" : {
      "sourceMaps"  : false,
      "minify"	    : true,
      "versioning"  : true,
      "ES5Support"  : true,
      "symbols" 		: true,
      "combineCSS"  : true
    },
    "staging" : {
      "sourceMaps"  : false,
      "ES5Support"  : false,
      "versioning"  : false
    },
    "dev" : {
      "sourceMaps"  : true,
      "minify"	    : false,
      "ES5Support"  : false,
      "versioning"  : false,
      "combineCSS"  : true
    }
  },

  "paths" : {
    "root"    : "",
    "webroot" : "web",
    "scripts" : "src/scripts",
    "sass"    : "src/sass",
    "js"      : "/assets/js",
    "css"     : "/assets/css",
    "uploads" : "/assets/uploads",
    "fonts"   : "/assets/fonts",
    "images"  : "/assets/images",
    "sprites" : "{images}/sprites"
  },

  "themes" : {
    "primary"   : "#3F4041",
    "secondary" : "#EB9F24"
  },

  "sass-injections" : {
    "variables" : {
      "primary"   : "{primary}",
      "secondary" : "{secondary}",
      "fonts"     : "'{fonts}'",
      "images"    : "'{images}'",
      "sprites"   : "'{sprites}'"
    },
    "imports" : [
      "vendor/marknotton/doggistyle/dist/_doggistyle"
    ]
  },

  "sources" : {
    "scripts" : [
      "modules/helpers/src/assets/scripts/helpers.js",
      "{scripts}/inits.js",
      "{scripts}/*/**.js"
    ],
    "vendors" : [
      "node_modules/@babel/polyfill/dist/polyfill.js",
			"node_modules/abortcontroller-polyfill/dist/polyfill-patch-fetch.js",
      "vendor/marknotton/agent/src/assets/scripts/agedddnt.es5.js"
    ],
    "sass" : [
      "{sass}/**/*.scss"
    ],
    "svgs" : [
      "{webroot}/{images}/**/!(plyr)*.svg"
    ],
    "symbols" : [
      "{webroot}/{sprites}/**/!(plyr)*.svg",
      "{webroot}/{images}/icon.svg",
      "{webroot}/{images}/logo.svg"
    ]
  },

  "filenames" : {
  	"js" : {
      "vendors" : "vendors.js",
  		"scripts" : "main.js"
  	},
  	"sass" : {
      "symbols" : "_symbols.scss"
  	},
  	"css" : {
  		"combined" : "all.css"
  	},
  	"svg" : {
  		"symbols"    : "symbols.svg",
      "exclusions" : ["logo"],
      "prefix"     : "icon"
  	}
  },

  "deployer" : {
    "repository"    : "git@bitbucket.org:yellostudio/craftmaster.git",
    "shared-files"  : [".env"],
    "shared-dirs"   : ["vendor", "storage", "node_modules", "{webroot}/{uploads}"],
    "writable-dirs" : ["storage", "node_modules", "{webroot}/assets"],
    "hosts" : {
      "production" : {
        "path"     : "deploy/production",
        "name"     : "production",
        "branch"   : "master",
        "hostname" : "www.craftmaster.com",
        "username" : "???",
        "port"     : "822"
      },
      "staging" : {
        "path"     : "deploy/staging",
        "name"     : "staging",
        "branch"   : "staging",
        "hostname" : "staging.craftmaster.com",
        "username" : "yello",
        "port"     : "822"
      }
    }
  },

  "watchers": [
    {
      "patterns": [
        "src/global/sass/**/*.scss",
        "{sass}/**/!(_symbols)*.scss",
        "vendor/marknotton/doggistyle/dist/_doggistyle.scss"
      ],
      "tasks": "sass",
      "reload" : false
    },
    {
      "patterns": "{webroot}/{images}/**/!(symbols)*.svg",
      "tasks": "symbols",
      "reload" : true
    },
    {
      "patterns": [
        "modules/helpers/src/assets/scripts/helpers.js",
        "modules/helpers/src/assets/scripts/classes/!(experiments)*.js",
        "src/global/scripts/*/**.js",
        "{scripts}/**/*.js"
      ],
      "tasks": "scripts",
      "reload" : true
    },
    {
      "patterns": [
        "config/**/*.php",
        "modules/**/*.php",
        "templates/**/*.tmpl",
        "templates/**/*.html",
        "templates/**/*.twig",
        "templates/*.twig"
      ],
      "tasks": "",
      "reload" : true
    }
  ]
}
