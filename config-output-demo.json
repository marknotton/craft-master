{
  "project"  : "Craft Master",

  "paths" : {
    "root"    : "",
    "webroot" : "web",
    "scripts" : "src/scripts",
    "sass"    : "src/sass",
    "js"      : "/assets/js",
    "css"     : "/assets/css",
    "uploads" : "/assets/uploads",
    "fonts"   : "/assets/fonts",
    "images"  : "/assets/images"
  },

  "themes" : {
    "primary"   : "#3F4041",
    "secondary" : "#EB9F24"
  },

  "_supported-browsers" : [
    "chrome > 55",
    "firefox > 44",
    "safari >= 9",
    "edge >= 15",
    "opera > 50"
  ],

  "_tasks" : {

    "scripts" : {
      "source" : [
        "src/scripts/extensions/*.js",
  			"src/scripts/classes/*.js",
        "src/scripts/components/*.js",
  			"src/scripts/utilities/*.js",
        "src/scripts/pages/*.js",
        "src/scripts/global.js"
      ],
      "output" : "/assets/js/global.js",
      "watcher" : {
        "reload" : true
      },
    },

    "vendors" : {
      "source" : [
        "node_modules/plyr/dist/plyr.js",
  			"src/scripts/vendor/gsap/TweenMax.js",
  			"src/scripts/vendor/gsap/utils/SplitText.js",
  			"src/scripts/vendor/gsap/TimelineMax.js",
  			"src/scripts/vendor/gsap/easing/CustomEase.js"
      ],
      "output" : "/assets/js/vendors.js"
    },

    "styles" : {
      "source" : [
        "!src/sass/emailer.scss",
        "src/sass/**/*.scss"
      ],
      "output" : "/assets/css",
      "watcher" : {
        "patterns": [
          "src/sass/**/!(_symbols)*.scss",
          "vendor/marknotton/doggistyle/dist/_doggistyle.scss"
        ],
        "reload" : false
      },
      "aliases" : ["scss", "sass", "css"],
      "options" : {
        "sass-injections" : {
          "variables" : {
            "primary"   : "#3F4041",
            "secondary" : "#EB9F24",
            "fonts"     : "'/assets/fonts'",
            "images"    : "'/assets/images'",
            "sprites"   : "'/assets/images/sprites'"
          },
          "imports" : [
            "vendor/marknotton/doggistyle/dist/_imports"
          ]
        },
      }
    },

    "symbols" : {
      "source" : [
        "web/assets/images/sprites/**/!(plyr)*.svg",
        "web/assets/images/icon.svg",
        "web/assets/images/logo.svg"
      ],
      "output" : "/assets/images/sprites/symbols.svg",
      "watcher" : {
        "reload" : true
      },
      "options" : {
        "exclude" : "logo.svg",
        "prefix"  : "icon",
        "sass-map-output" : "src/sass/_symbols.scss"
      }
    },

    "templates" : {
      "source" : [
        "config/**/*.php",
        "modules/**/*.php",
        "templates/**/*.tmpl",
        "templates/**/*.html",
        "templates/**/*.twig",
        "templates/*.twig"
      ],
      "watcher" : {
        "reload" : true
      }
    }

  },

  "_deployer" : {
    "repository"    : "git@bitbucket.org:yellostudio/craftmaster.git",
    "shared-files"  : [".env"],
    "shared-dirs"   : ["vendor", "storage", "node_modules", "web/assets/uploads"],
    "writable-dirs" : ["storage", "node_modules", "web/assets"],
    "hosts" : {
      "production" : {
        "path"     : "deploy/production",
        "name"     : "production",
        "branch"   : "master",
        "hostname" : "www.craftmaster.com",
        "username" : "???",
        "port"     : "822"
      },
      "staging" : {
        "path"     : "deploy/staging",
        "name"     : "staging",
        "branch"   : "staging",
        "hostname" : "staging.craftmaster.com",
        "username" : "yello",
        "port"     : "822"
      }
    }
  },

  "files" : {
    "js"      : [
      {
        "filename" : "global.js",
        "size" : 42222,
        "gzip" : 22364,
        "cache" : 257587555
      },
      {
        "filename" : "vendors.js",
        "size" : 8934222,
        "gzip" : 422364,
        "cache" : 64651684
      },
    ],
    "css"     : [

    ],
    "fonts"   : [
      
    ],
    "images"  : [

    ],
  }
}
