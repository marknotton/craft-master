{
  "name": "craftcms/craft",
  "description": "Craft CMS",
  "keywords": [
    "craft",
    "cms",
    "craftcms",
    "project"
  ],
  "license": "MIT",
  "homepage": "https://craftcms.com/",
  "type": "project",
  "support": {
    "email": "support@craftcms.com",
    "issues": "https://github.com/craftcms/cms/issues",
    "forum": "https://craftcms.stackexchange.com/",
    "source": "https://github.com/craftcms/cms",
    "docs": "https://craftcms.com/docs",
    "rss": "https://craftcms.com/changelog.rss"
  },
  "require": {
    "oomphinc/composer-installers-extender": "^1.1",
    "craftcms/cms": "3.1.x-dev as 3.1.0-alpha.1",
    "vlucas/phpdotenv": "^2.4.0",
    "craftcms/redactor": "^2.0.1",
    "nystudio107/craft-minify": "^1.2.6",
    "marknotton/agent": "^1.1.3",
    "marknotton/doggistyle": "v0.3.0.x-dev",
    "marknotton/helpers": "dev-experiments",
    "marknotton/template-maker": "dev-experiments",
    "deployer/deployer": "^6.2",
    "deployer/recipes": "^6.1"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/",
      "modules\\helpers\\": "modules/helpers/src/",
      "modules\\general\\": "modules/general/src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "extra": {
    "installer-types": ["craft-module"],
    "installer-paths": {
      "modules/{$name}": ["type:craft-module"]
    }
  },
  "scripts": {

    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.dev', '.env');\""
    ],
    "post-create-project-cmd": [
      "@composer dump-autoload -o",
      "@php craft setup/welcome"
    ]
  }
}
